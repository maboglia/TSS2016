<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/blue_200</item>
        <item name="android:background">@color/indigo_500</item>
        <item name="android:listViewStyle">@style/ListView</item>
        <item name="android:buttonStyle">@style/mioBottone</item>
        <item name="android:imageWellStyle">@style/ImageView</item>
    </style>

    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/light_blue_700</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/light_blue_100</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@android:drawable/list_selector_background</item>
    </style>

    <style name="ImageView" parent="@android:style/Widget.ImageWell">
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="titolo" parent="android:TextAppearance.Large">

        <item name="android:textSize">@dimen/dim_font_big</item>
        <item name="android:color">#03a9f4</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:typeface">monospace</item>

    </style>

    <style name="titolo.sottotitolo" parent="android:TextAppearance.Large">

        <item name="android:textSize">@dimen/dim_font_medium</item>

    </style>

    <style name="mioBottone" parent="@android:style/Widget.Button">

        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:padding">10dp</item>

    </style>
    <style name="mioBottone.red" parent="@android:style/Widget.Button">

        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#C00</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/custom_button</item>

    </style>


</resources>
